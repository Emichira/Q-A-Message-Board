{{#if addNewAnswer}}
<h1>Add Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="jibu">Jibu</label>
        {{input value=jibu id="jibu"}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="mtunzi">Mtunzi</label>
        {{input value=mtunzi id="mtunzi"}}
      </div>
      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>Add Answer</button>
{{/if}}
